<h2><%= @charity.name %></h2>
<p><%= @charity.description %></p>

<h3>Total Raised</h3>
  <p>$<%= @charity.runs.inject(0) {|sum, r| sum + r.distance * 4}%></p>

<h3>Runs</h3>
  <% @charity.runs.each do |r| %> 
    Distance: <%= r.distance %> miles - Raised: $<%= r.distance * 4 %> - Runner: <%= r.user.username %><br><br>
  <% end %>

<%= link_to "View All #{@charity.name} Runs", charity_runs_path(@charity) %>
<%= link_to "Add a run for this charity", new_charity_run_path(@charity) %>