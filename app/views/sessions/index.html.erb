<div id="login-container">
  <div class="login">
    <%= image_tag "boost_logo.png", :class => 'logo' %>

    <%= error %>

    <div>
      <%= form_for :user do |f| %>
        <p>
          <%= f.label :username %>
          <%= f.text_field :username %>
        </p>
        <p>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </p>
        <p>
          <%= f.submit 'Sign In', :class => 'sign-up-btn btn-primary btn-sm btn-block' %>
        </p>
      <% end %>
    </div>
  </div> 

  <p class="sign-up-section">Not a member? <%= link_to "Sign Up", signup_path %> or <%= link_to "Sign In with Google", '/auth/google_oauth2'%>.</p>
</div>