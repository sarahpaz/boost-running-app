<div id="action-container">
  <div class="action">
    <%= image_tag "boost_logo.png", :class => 'logo' %>

    <% flash.each do |name, msg| %>
      <div class="alert alert-<%= name %>">
        <%= msg %>
      </div>
    <% end %>

    <div>
      <%= form_for :user do |f| %>
        <p>
          <%= f.label :username %>
          <%= f.text_field :username %>
        </p>
        <p>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </p>
        <p>
          <%= f.submit 'Sign In', :class => 'boost-btn btn-primary btn-sm btn-block' %>
        </p>
      <% end %>
    </div>
  </div> 

  <p class="cta-section">Not a member? <%= link_to "Sign Up", signup_path %> or <%= link_to "Sign In with Google", '/auth/google_oauth2'%>.</p>
</div>